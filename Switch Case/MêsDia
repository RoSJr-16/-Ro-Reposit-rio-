package switchcase01;
import java.util.*;                                                  
public class MêsDia {
	public static void main(String[] args) {
		Scanner ler = new Scanner (System.in);
		int m;
		System.out.println("Insira um número corrêspondente a um mês do ano:");
		m = ler.nextInt();
		//Switch Case
		switch (m){
		case 2:
			System.out.println("28 dias");
			break;
		case 4:
		case 6:
		case 7:
		case 9:
		case 11:
			System.out.println("30 dias");
			break;
		case 1:
		case 3:
		case 5:
		case 8:
		case 10:
		case 12:	
			System.out.println("31 dias");
			break;
		default:
			System.out.println("Número inválido");
		}
		ler.close();
	}
}
